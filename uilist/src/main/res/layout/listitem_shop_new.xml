<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listitem_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    card_view:cardCornerRadius="6dp">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="177dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        autofit:layout_constraintLeft_toLeftOf="parent"
        autofit:layout_constraintRight_toRightOf="parent"
        autofit:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        autofit:layout_constraintTop_toTopOf="parent"
        autofit:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/listitem_bg"
        android:padding="@dimen/_2sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/listitem_shop_distance"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/listitem_shop_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#FFF" />

    </LinearLayout>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/listitem_shop_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:lines="1"
            android:textSize="@dimen/_12sdp"
            android:textColor="#05ADB8"
            android:layout_marginTop="8dp"
            autofit:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            autofit:layout_constraintTop_toBottomOf="@+id/iv_icon"
            android:layout_marginStart="16dp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/time"
        autofit:layout_constraintTop_toBottomOf="@+id/listitem_shop_tv_name"
        autofit:layout_constraintLeft_toLeftOf="@+id/listitem_shop_tv_name"
        android:id="@+id/imageView3" />
        <TextView
            android:id="@+id/listitem_shop_tv_time"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/_200sdp"
            android:text="8:00~9:00"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:ellipsize="end"
            android:textColor="#535353"
            autofit:layout_constraintTop_toTopOf="@+id/imageView3"
            autofit:layout_constraintLeft_toRightOf="@+id/imageView3"/>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/location"
        autofit:layout_constraintTop_toBottomOf="@+id/imageView3"
        autofit:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/listitem_shop_tv_address"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="台北市大安區忠孝東路四段209號11樓"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#535353"
            autofit:layout_constraintTop_toTopOf="@+id/imageView4"
            autofit:layout_constraintLeft_toRightOf="@+id/imageView4"/>
    <include
        android:id="@+id/rating"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        layout="@layout/rating_r"
        android:layout_marginTop="8dp"
        autofit:layout_constraintTop_toBottomOf="@+id/iv_icon"
        android:layout_marginRight="16dp"
        autofit:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp" />




</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
